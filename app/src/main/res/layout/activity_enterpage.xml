<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".enterpage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cr1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/a1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.006"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/im1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/a1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cr1"

            />

        <RatingBar
            android:id="@+id/rat1"
            android:layout_width="200dp"
            android:layout_height="50dp"


            app:layout_constraintEnd_toEndOf="@id/im1"
            app:layout_constraintStart_toEndOf="@id/b1"
            app:layout_constraintTop_toBottomOf="@id/im1"



            />

        <Button
            android:id="@+id/b1"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/share1"
            app:layout_constraintEnd_toStartOf="@id/rat1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/im1"

            />

        <ImageView

            android:id="@+id/h1"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/heart"

            android:onClick="red"

            app:layout_constraintEnd_toStartOf="@id/rat1"
            app:layout_constraintStart_toEndOf="@+id/b1"
            app:layout_constraintTop_toBottomOf="@id/im1"

            />






        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cr2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/a4"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.006"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintBottom_toTopOf="@+id/im2"
            app:layout_constraintTop_toBottomOf="@id/b1"



            />

        <ImageView
            android:id="@+id/im2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/a4"

            app:layout_constraintEnd_toEndOf="@id/rat1"
            app:layout_constraintStart_toStartOf="@id/rat1"
            app:layout_constraintTop_toBottomOf="@id/cr2"/>

        <RatingBar
            android:id="@+id/rat2"
            android:layout_width="200dp"
            android:layout_height="50dp"


            app:layout_constraintEnd_toEndOf="@id/im2"
            app:layout_constraintStart_toEndOf="@id/b2"
            app:layout_constraintTop_toBottomOf="@id/im2"



            />

        <Button
            android:id="@+id/b2"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/share1"
            app:layout_constraintEnd_toStartOf="@id/rat2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/im2"

            />

        <ImageView
            android:id="@+id/h2"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/heart"
            android:onClick="red2"

            app:layout_constraintEnd_toStartOf="@id/rat2"
            app:layout_constraintStart_toEndOf="@+id/b2"
            app:layout_constraintTop_toBottomOf="@id/im2"

            />






        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cr3"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/a5"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.006"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintBottom_toTopOf="@+id/im3"
            app:layout_constraintTop_toBottomOf="@id/b2"
            />

        <ImageView
            android:id="@+id/im3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/a5"

            app:layout_constraintEnd_toEndOf="@id/rat2"
            app:layout_constraintStart_toStartOf="@id/rat2"
            app:layout_constraintTop_toBottomOf="@id/cr3"/>


        <RatingBar
            android:id="@+id/rat3"
            android:layout_width="200dp"
            android:layout_height="50dp"


            app:layout_constraintEnd_toEndOf="@id/im3"
            app:layout_constraintStart_toEndOf="@id/b3"
            app:layout_constraintTop_toBottomOf="@id/im3"



            />

        <Button
            android:id="@+id/b3"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/share1"
            app:layout_constraintEnd_toStartOf="@id/rat3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/im3"

            />

        <ImageView
            android:id="@+id/h3"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/heart"
            android:onClick="red3"
            app:layout_constraintEnd_toStartOf="@id/rat3"
            app:layout_constraintStart_toEndOf="@+id/b3"
            app:layout_constraintTop_toBottomOf="@id/im3"

            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cr4"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/a8"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.006"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintBottom_toTopOf="@+id/im4"
            app:layout_constraintTop_toBottomOf="@id/b3"/>


        <ImageView
            android:id="@+id/im4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/a8"
            app:layout_constraintEnd_toEndOf="@id/rat3"
            app:layout_constraintStart_toStartOf="@id/rat3"
            app:layout_constraintTop_toBottomOf="@id/cr4"/>

        <RatingBar
            android:id="@+id/rat4"
            android:layout_width="200dp"
            android:layout_height="50dp"


            app:layout_constraintEnd_toEndOf="@id/im4"
            app:layout_constraintStart_toEndOf="@id/b4"
            app:layout_constraintTop_toBottomOf="@id/im4"



            />

        <Button
            android:id="@+id/b4"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/share1"
            app:layout_constraintEnd_toStartOf="@id/rat4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/im4"

            />

        <ImageView
            android:id="@+id/h4"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/heart"
            android:onClick="red4"
            app:layout_constraintEnd_toStartOf="@id/rat4"
            app:layout_constraintStart_toEndOf="@+id/b4"
            app:layout_constraintTop_toBottomOf="@id/im4"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>

